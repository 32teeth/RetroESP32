#!/bin/zsh

#---------------------------------
# FANCY STUFF
#---------------------------------
export nc='\e[0m' # No Color
export red='\e[1;31m'
export green='\e[1;32m'
export yellow='\e[1;33m'
export blue='\e[1;34m'
export magenta='\e[1;35m'
export cyan='\e[1;36m'
export white='\e[1;37m'
export today=`date +%A\ %B\ %d\ %Y\ %T`

export squid=üêô
export robot=ü§ñ
export unicorn=ü¶Ñ
export fox=ü¶ä
export lion=ü¶Å
export monkey=üêµ
export chicken=üêî
export panda=üêº
export whale=üê≥
export game=üïπÔ∏è

# port
port() {
  clear
  PORTS=(/dev/cu*)
  OPTION="${monkey}  ${red}Please Select a ${cyan}COM Port? ${nc}"
  echo "\n--------------------------------------------------------------------------"
  echo "\n${OPTION}"
  echo "\n--------------------------------------------------------------------------"  
  select PORT in "${PORTS[@]}"
  do
    case $PORT in
      * ) 
        if [[ $PORT[0,1] ]]
        then
          clear
          echo "\n--------------------------------------------------------------------------"
          echo "\n${squid}  ${green}Selected ${cyan}${PORT#*.} ${nc}"
          echo "\n--------------------------------------------------------------------------"
          break
        else
          port
        fi
    esac
  done  
}

port

echo "DONE"


